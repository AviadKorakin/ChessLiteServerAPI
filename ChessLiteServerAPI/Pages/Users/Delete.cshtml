@page
@model ChessLiteServerAPI.Pages.Users.DeleteModel

@{
    ViewData["Title"] = "Delete";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <h1 class="text-center"><i class="fas fa-user-times"></i> Delete User</h1>
        <h3 class="text-center text-danger">
            <i class="fas fa-exclamation-triangle"></i> Are you sure you want to delete this user?
        </h3>
        <hr />
        <dl class="row">
            <dt class="col-sm-4"><i class="fas fa-user"></i> First Name</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Users.FirstName)</dd>
            <dt class="col-sm-4"><i class="fas fa-phone"></i> Phone</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Users.Phone)</dd>
            <dt class="col-sm-4"><i class="fas fa-globe"></i> Country</dt>
            <dd class="col-sm-8">@Html.DisplayFor(model => model.Users.Country)</dd>
        </dl>
        <form method="post" class="text-center d-flex align-items-center button-form">
            <input type="hidden" asp-for="Users.Id" />

            <!-- Delete Button with Redish Gradient -->
            <button type="submit" class="btn btn-delete-gradient btn-sm me-2">
                <i class="fas fa-trash-alt"></i> Delete
            </button>

            <!-- Return Button with Silverish Gradient -->
            <a asp-page="./Index" class="btn btn-back-home-gradient btn-sm">
                <i class="fas fa-arrow-left"></i> Return to Users
            </a>
        </form>
    </div>
</div>

<!-- CSS for Buttons and Form Styling -->
<style>
    /* Ensure the form doesn't have a background or border */
    .button-form {
        background: none;
        border: none;
        padding: 0;
        margin: 0;
    }

    .btn-delete-gradient {
        background: linear-gradient(45deg, #ff1744, #d50000); /* Red gradient */
        border: none;
        color: white;
        font-weight: bold;
        transition: transform 0.2s, box-shadow 0.2s;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .btn-delete-gradient:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
        }

    .btn-back-home-gradient {
        background: linear-gradient(45deg, #c0c0c0, #d3d3d3); /* Silver gradient */
        border: none;
        color: black;
        font-weight: bold;
        transition: transform 0.2s, box-shadow 0.2s;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    }

        .btn-back-home-gradient:hover {
            transform: scale(1.05);
            box-shadow: 0 6px 8px rgba(0, 0, 0, 0.2);
        }

    /* Remove any extra space between the buttons */
    form {
        gap: 10px;
    }

    /* Remove outline around buttons to blend better */
    button, a {
        outline: none;
    }
</style>
